        'A_PolyKernel.R' 'B_PvMethod.R' 'B_PvMethod_Davies.R'
        'B_PvMethod_Liu.R' 'C_BinomialTrait.R' 'C_GaussianTrait.R'
        'D_NullResult.R' 'calcLocalKernel.R' 'distanceMatrix.R'
        'mainCode.R' 'point.R' 'pvResamp.R'
